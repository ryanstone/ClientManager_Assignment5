<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.stoneryan.android.clientmanager"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature android:name="android.hardware.camera2"
                  android:required="false"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".CreateNewCustomerActivity">
        </activity>
        <activity android:name=".CustomerListActivity">
        </activity>
        <activity android:name=".ViewSessionsActivity">
        </activity>
        <activity android:name=".SignActivity">
        </activity>
        <activity android:name=".AddSessionActivity">
        </activity>
        <activity android:name=".ViewReceiptActivity">
        </activity>
        <activity android:name=".ViewCustomerActivity">
        </activity>
        <activity android:name=".LogoffActivity">
        </activity>
    </application>

</manifest>
